                        </Trigger>
                        <Trigger Property="attach:TextElement.IsError" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PP.Brushes.Warning}" />
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible" />
                            <Setter TargetName="placeholder" Property="Opacity" Value="0.6" />
                            <Setter TargetName="placeholder" Property="Foreground" Value="{DynamicResource PP.Brushes.Warning}" />
                            <Setter TargetName="placeholder" Property="Text" Value="{Binding Path=(attach:TextElement.ErrorText),RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ctrls:DateTimeScopePicker}">
        <Setter Property="Padding" Value="6 3" />
        <Setter Property="Background" Value="{DynamicResource PP.Brushes.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PP.Brushes.Black50}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="attach:BorderElement.HoverBorderBrush" Value="{DynamicResource PP.Brushes.Themes70}" />
        <Setter Property="attach:BorderElement.FocusBorderBrush" Value="{DynamicResource PP.Brushes.Themes}" />
        <Setter Property="Foreground" Value="{DynamicResource PP.Brushes.Foreground}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="attach:IconElement.Geometry" Value="{StaticResource PP.Pathes.Date}" />
        <Setter Property="attach:IconElement.Margin" Value="6" />
        <Setter Property="attach:IconElement.Brush" Value="{DynamicResource PP.Brushes.Themes}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:DateTimeScopePicker}">
                    <ctrls:SimplePanel>
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="{TemplateBinding attach:BorderElement.CornerRadius}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                            <ctrls:SimplePanel>
                                <TextBlock x:Name="placeholder" Text="{TemplateBinding attach:TextElement.Placeholder}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}"
                                           Visibility="{Binding Text,RelativeSource={RelativeSource TemplatedParent},Converter={x:Static cvts:StringToVisibilityConverter.EmptyToVisible}}"
                                           Opacity="0.6" IsHitTestVisible="False" />
                                <TextBox x:Name="PART_TextBox" Background="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                         HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Foreground="{TemplateBinding Foreground}"
                                         Text="{Binding Text,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource TemplatedParent}}" InputMethod.IsInputMethodEnabled="False"
                                         IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            </ctrls:SimplePanel>
                        </Border>
                        <Button x:Name="PART_IconButton" Style="{DynamicResource PP.Styles.Button.Opacity}" Focusable="False" IsTabStop="False" HorizontalAlignment="Right"
                                    Padding="{TemplateBinding attach:IconElement.Margin}">
                            <Path Data="{TemplateBinding attach:IconElement.Geometry}" Stretch="Uniform" Fill="{TemplateBinding attach:IconElement.Brush}" />
                        </Button>
                        <Popup x:Name="PART_Popup" StaysOpen="False" Placement="Bottom" VerticalOffset="2" AllowsTransparency="True" MinWidth="{TemplateBinding ActualWidth}">
                            <Border Background="{DynamicResource PP.Brushes.White}" BorderThickness="1" BorderBrush="{DynamicResource PP.Brushes.Black20}" MinHeight="280" MinWidth="460"
                                    TextElement.Foreground="{DynamicResource PP.Brushes.Black80}" CornerRadius="5">
                                <DockPanel>
                                    <DockPanel DockPanel.Dock="Bottom" Height="40" Margin="10 0">
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <Button x:Name="PART_ClearButton" Style="{StaticResource Styles.Button.DateTimePicker}" attach:BorderElement.CornerRadius="2 0 0 2">清空</Button>
                                            <Button x:Name="PART_ConfirmButton" Style="{StaticResource Styles.Button.DateTimePicker}" Margin="-1 0 0 0" attach:BorderElement.CornerRadius="0 2 2 0">确定</Button>
                                        </StackPanel>
                                        <ToggleButton x:Name="toggle" Style="{StaticResource Styles.ToggleButton.DateTimePicker}" />
                                        <TextBlock VerticalAlignment="Center" Margin="10 0" Text="{Binding PrevText,RelativeSource={RelativeSource TemplatedParent}}" IsHitTestVisible="False" />
                                    </DockPanel>
                                    <Line DockPanel.Dock="Bottom" X1="1" Stretch="Uniform" Stroke="{DynamicResource PP.Brushes.Black20}" IsHitTestVisible="False" />
                                    <StackPanel DockPanel.Dock="Right" Width="90">
                                        <Button x:Name="PART_TodayButton" Style="{StaticResource Styles.Button.DateTimePicker}" Height="36" BorderThickness="0 0 0 1" attach:BorderElement.CornerRadius="0">今天</Button>
                                        <Button x:Name="PART_WeekButton" Style="{StaticResource Styles.Button.DateTimePicker}" Height="36" BorderThickness="0 0 0 1" attach:BorderElement.CornerRadius="0">近一周</Button>
                                        <Button x:Name="PART_MonthButton" Style="{StaticResource Styles.Button.DateTimePicker}" Height="36" BorderThickness="0 0 0 1" attach:BorderElement.CornerRadius="0">近一个月</Button>
                                        <Button x:Name="PART_HalfYearButton" Style="{StaticResource Styles.Button.DateTimePicker}" Height="36" BorderThickness="0 0 0 1" attach:BorderElement.CornerRadius="0">近半年</Button>
                                        <Button x:Name="PART_OneYearButton" Style="{StaticResource Styles.Button.DateTimePicker}" Height="36" BorderThickness="0 0 0 1" attach:BorderElement.CornerRadius="0">近一年</Button>
                                    </StackPanel>
                                    <Line DockPanel.Dock="Right" Y2="1" Stretch="Uniform" Stroke="{DynamicResource PP.Brushes.Black20}" IsHitTestVisible="False" />
                                    <ctrls:SimplePanel>
                                        <UniformGrid x:Name="panel_calendar" Columns="2">
                                            <Calendar x:Name="PART_CalendarBegin" Style="{StaticResource Styles.Calendar.DatePicker.White}" Margin="10" />
                                            <Calendar x:Name="PART_CalendarEnd" Style="{StaticResource Styles.Calendar.DatePicker.White}" Margin="10" />
                                        </UniformGrid>
                                        <UniformGrid x:Name="panel_time" Columns="2" Visibility="Hidden">
                                            <Border Height="{Binding ActualHeight,ElementName=PART_CalendarBegin}" Margin="10 ">
                                                <Grid Margin="0 3">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="37" />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Row="1" Grid.ColumnSpan="5" BorderThickness="1 0" BorderBrush="{DynamicResource PP.Brushes.Black20}" />
                                                    <Line Grid.Row="1" Grid.Column="1" Y1="1" Stretch="Uniform" Stroke="{DynamicResource PP.Brushes.Black20}" IsHitTestVisible="False" />
                                                    <Line Grid.Row="1" Grid.Column="3" Y1="1" Stretch="Uniform" Stroke="{DynamicResource PP.Brushes.Black20}" IsHitTestVisible="False" />
                                                    <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">时</TextBlock>
                                                    <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">分</TextBlock>
                                                    <TextBlock Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">秒</TextBlock>
                                                    <ListBox x:Name="list1" Grid.Row="1" Grid.Column="0" Style="{StaticResource Styles.ListBox.DateTimePicker.Time}" Foreground="{TemplateBinding Foreground}" ItemsSource="{TemplateBinding Hours}" SelectedItem="{Binding BeginHour,RelativeSource={RelativeSource TemplatedParent}}" />
                                                    <ListBox x:Name="list2" Grid.Row="1" Grid.Column="2" Style="{StaticResource Styles.ListBox.DateTimePicker.Time}" Foreground="{TemplateBinding Foreground}" ItemsSource="{TemplateBinding Minutes}" SelectedItem="{Binding BeginMinute,RelativeSource={RelativeSource TemplatedParent}}" />
                                                    <ListBox x:Name="list3" Grid.Row="1" Grid.Column="4" Style="{StaticResource Styles.ListBox.DateTimePicker.Time}" Foreground="{TemplateBinding Foreground}" ItemsSource="{TemplateBinding Seconds}" SelectedItem="{Binding BeginSecond,RelativeSource={RelativeSource TemplatedParent}}" />
                                                </Grid>
                                            </Border>
                                            <Border Height="{Binding ActualHeight,ElementName=PART_CalendarEnd}" Margin="10 ">
                                                <Grid Margin="0 3">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="37" />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Row="1" Grid.ColumnSpan="5" BorderThickness="1 0" BorderBrush="{DynamicResource PP.Brushes.Black20}" />
                                                    <Line Grid.Row="1" Grid.Column="1" Y1="1" Stretch="Uniform" Stroke="{DynamicResource PP.Brushes.Black20}" IsHitTestVisible="False" />
                                                    <Line Grid.Row="1" Grid.Column="3" Y1="1" Stretch="Uniform" Stroke="{DynamicResource PP.Brushes.Black20}" IsHitTestVisible="False" />
                                                    <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">时</TextBlock>
                                                    <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">分</TextBlock>
                                                    <TextBlock Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">秒</TextBlock>
                                                    <ListBox x:Name="list4" Grid.Row="1" Grid.Column="0" Style="{StaticResource Styles.ListBox.DateTimePicker.Time}" Foreground="{TemplateBinding Foreground}" ItemsSource="{TemplateBinding Hours}" SelectedItem="{Binding EndHour,RelativeSource={RelativeSource TemplatedParent}}" />
                                                    <ListBox x:Name="list5" Grid.Row="1" Grid.Column="2" Style="{StaticResource Styles.ListBox.DateTimePicker.Time}" Foreground="{TemplateBinding Foreground}" ItemsSource="{TemplateBinding Minutes}" SelectedItem="{Binding EndMinute,RelativeSource={RelativeSource TemplatedParent}}" />
                                                    <ListBox x:Name="list6" Grid.Row="1" Grid.Column="4" Style="{StaticResource Styles.ListBox.DateTimePicker.Time}" Foreground="{TemplateBinding Foreground}" ItemsSource="{TemplateBinding Seconds}" SelectedItem="{Binding EndSecond,RelativeSource={RelativeSource TemplatedParent}}" />
                                                </Grid>
                                            </Border>
                                        </UniformGrid>
                                    </ctrls:SimplePanel>
                                </DockPanel>
                            </Border>
                        </Popup>
                    </ctrls:SimplePanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsReadOnly" Value="True">
                            <Setter TargetName="PART_IconButton" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=(attach:TextElement.Placeholder),RelativeSource={RelativeSource TemplatedParent},Converter={x:Static cvts:StirngToBooleanConverter.IsNullOrEmpty}}" Value="True">
                            <Setter TargetName="placeholder" Property="Text" Value="{Binding DateTimeFormat,RelativeSource={RelativeSource TemplatedParent}}" />
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{Binding Path=(attach:BorderElement.HoverBorderBrush),RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{Binding Path=(attach:BorderElement.FocusBorderBrush),RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding IsChecked,ElementName=toggle}" Value="True">
                            <Setter TargetName="panel_calendar" Property="Visibility" Value="Hidden" />
                            <Setter TargetName="panel_time" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <Trigger Property="attach:TextElement.IsError" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PP.Brushes.Warning}" />
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible" />
                            <Setter TargetName="placeholder" Property="Opacity" Value="0.6" />
                            <Setter TargetName="placeholder" Property="Foreground" Value="{DynamicResource PP.Brushes.Warning}" />
                            <Setter TargetName="placeholder" Property="Text" Value="{Binding Path=(attach:TextElement.ErrorText),RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>