<UserControl x:Class="PP.Wpf.Demo.Views.Test"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrls="clr-namespace:PP.Wpf.Controls;assembly=PP.Wpf"
             xmlns:attach="clr-namespace:PP.Wpf.Controls.Attach;assembly=PP.Wpf"
             xmlns:cvts="clr-namespace:PP.Wpf.Converters;assembly=PP.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White" FontSize="15">
    <ctrls:SimplePanel Width="100" Height="100">
        <ctrls:Arc StrokeThickness="12.5" Stroke="#ffcf6b" Radian="90" RenderTransformOrigin="0.5 0.5">
            <ctrls:Arc.RenderTransform>
                <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
            </ctrls:Arc.RenderTransform>
        </ctrls:Arc>
        <ctrls:Arc StrokeThickness="10" Stroke="#5baeff" IsAutoAnimate="True" Radian="90" RadianStart="0" />
        <ctrls:Arc StrokeThickness="10" Stroke="#ffb29d" Radian="90" RadianStart="90" />
        <ctrls:Arc StrokeThickness="10" Stroke="#cbd0d7" Radian="90" RadianStart="180" />
    </ctrls:SimplePanel>
</UserControl>
